<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.anniekobia.harrypotter.ui.view.HomeFragment">
        <action
            android:id="@+id/homeFragment_to_studentFragment"
            app:destination="@id/studentFragment" />
        <action
            android:id="@+id/homeFragment_to_staffFragment"
            app:destination="@id/staffFragment" />
        <action
            android:id="@+id/homeFragment_to_allCharactersFragment"
            app:destination="@id/allCharactersFragment" />
    </fragment>
    <fragment
        android:id="@+id/studentFragment"
        android:name="com.anniekobia.harrypotter.ui.view.StudentsFragment"
        tools:layout="@layout/fragment_student" />
    <fragment
        android:id="@+id/staffFragment"
        android:name="com.anniekobia.harrypotter.ui.view.StaffFragment"
        tools:layout="@layout/fragment_staff" />
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.anniekobia.harrypotter.ui.view.DetailsFragment"
        tools:layout="@layout/fragment_details" >
    </fragment>
    <action
        android:id="@+id/global_detailsFragment"
        app:destination="@id/detailsFragment" />
    <fragment
        android:id="@+id/allCharactersFragment"
        android:name="com.anniekobia.harrypotter.ui.view.AllCharactersFragment"
        android:label="AllCharactersFragment" />
</navigation>