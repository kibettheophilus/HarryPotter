<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/inner_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/superhero_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/blackpanther"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.48" />

            <TextView
                android:id="@+id/superhero_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/textview_margin_vertical"
                android:layout_marginTop="10dp"
                android:text="Superhero Name"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@id/superhero_image"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/superhero_character_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/textview_margin_vertical"
                android:layout_marginTop="5dp"
                android:text="Character Name"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/superhero_image"
                app:layout_constraintTop_toBottomOf="@id/superhero_name" />

            <TextView
                android:id="@+id/superhero_description"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/textview_margin_vertical"
                android:layout_marginTop="8dp"
                android:maxLength="90"
                android:text="@string/loren_ipsum"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toEndOf="@id/superhero_image"
                app:layout_constraintTop_toBottomOf="@id/superhero_character_name" />

            <TextView
                android:id="@+id/more_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/more_info"
                android:textColor="@android:color/black"
                android:layout_marginBottom="5dp"
                android:layout_marginHorizontal="@dimen/margin_horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/superhero_image"
                app:layout_constraintTop_toBottomOf="@id/superhero_description" />

            <ImageView
                android:id="@+id/more_info_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="@dimen/margin_horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/superhero_description"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>